<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Box?>
<?import javafx.scene.text.Font?>

<VBox maxHeight="720.0" maxWidth="1280.0" minHeight="720.0" minWidth="1280.0" prefHeight="720.0" prefWidth="1280.0"
      xmlns="http://javafx.com/javafx/16"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ViewController">
    <MenuBar VBox.vgrow="NEVER">
        <Menu mnemonicParsing="false" text="Extras">
            <MenuItem mnemonicParsing="false" text="Enable filter"/>
            <MenuItem mnemonicParsing="false" text="Disable filter"/>
            <SeparatorMenuItem mnemonicParsing="false"/>
            <MenuItem mnemonicParsing="false" text="Transmit data"/>
            <MenuItem mnemonicParsing="false" text="Stop transmitting data"/>
        </Menu>
        <Menu mnemonicParsing="false" text="Help">
            <MenuItem mnemonicParsing="false" text="About"/>
        </Menu>
    </MenuBar>
    <AnchorPane VBox.vgrow="ALWAYS">
        <Box fx:id="box" depth="300.0" height="300.0" layoutX="635.0" layoutY="296.0" width="300.0"/>
        <TabPane layoutX="-3.0" layoutY="523.0" prefHeight="171.0" prefWidth="407.0" tabClosingPolicy="UNAVAILABLE">
            <Tab text="Connection properties">
                <SplitPane dividerPositions="0.4084507042253521" orientation="VERTICAL" prefHeight="200.0"
                           prefWidth="160.0">
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="87.0" prefWidth="407.0">
                        <Label layoutX="21.0" layoutY="16.0" prefHeight="25.0" prefWidth="23.0"
                               text="IP ">
                            <font>
                                <Font size="14.0"/>
                            </font>
                        </Label>
                        <TextField fx:id="ipAddressTextField" layoutX="48.0" layoutY="16.0"
                                   prefHeight="25.0" prefWidth="247.0"/>
                    </AnchorPane>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="56.0" prefWidth="407.0">
                        <ButtonBar layoutX="3.0" layoutY="42.0" prefHeight="25.0" prefWidth="400.0">
                            <buttons>
                                <Button mnemonicParsing="false"
                                        text="Connect"/>
                            </buttons>
                        </ButtonBar>
                        <Label layoutX="14.0" layoutY="14.0" prefHeight="25.0" prefWidth="34.0"
                               text="port">
                            <font>
                                <Font size="14.0"/>
                            </font>
                        </Label>
                        <TextField fx:id="portTextField" layoutX="48.0" layoutY="14.0"
                                   prefHeight="25.0" prefWidth="247.0"/>
                    </AnchorPane>
                </SplitPane>
            </Tab>
            <Tab text="Connection status">
                <Label fx:id="connStatusLabel" prefHeight="42.0" prefWidth="112.0"
                       text="   Disconnected..."/>
            </Tab>
        </TabPane>
        <TabPane layoutX="403.0" layoutY="523.0" prefHeight="171.0" prefWidth="508.0"
                 tabClosingPolicy="UNAVAILABLE">
            <Tab text="Current telemetry">
                <Label fx:id="telemetryLabel" prefHeight="47.0" prefWidth="503.0" text="No data..."/>
            </Tab>
            <Tab text="Send telemetry to server"/>
        </TabPane>
    </AnchorPane>
</VBox>
